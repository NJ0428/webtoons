    const days = ['ì›”', 'í™”', 'ìˆ˜', 'ëª©', 'ê¸ˆ', 'í† ', 'ì¼'];
    allComics = [];
    
    for (const day of days) {
      const response = await fetch(`/api/webtoons/by_day/${day}`);
      if (response.ok) {
        const data = await response.json();
        allComics = allComics.concat(data.map(comic => ({...comic, dayOfWeek: day})));
      }
    }
    
    showLoading(false);
  } catch (error) {
    console.error('ì›¹íˆ° ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
    showLoading(false);
  }
}

// ìš”ì¼ë³„ í•„í„°ë§
async function filterByDay(day) {
  try {
    showLoading(true);
    
    const response = await fetch(`/api/webtoons/by_day/${day}`);
    if (response.ok) {
      const comics = await response.json();
      displayComics(comics);
      setActiveTab(day);
      currentFilter = day;
    }
    
    showLoading(false);
  } catch (error) {
    console.error('ì›¹íˆ° í•„í„°ë§ ì‹¤íŒ¨:', error);
    showLoading(false);
  }
}

// ì „ì²´ ì›¹íˆ° í‘œì‹œ
