<main class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    <!-- 이달의 신규 웹툰 섹션 -->
    <section class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-800">이달의 신규 웹툰</h2>
        <a href="#" class="text-sm text-gray-500 hover:text-green-600">신규웹툰 더보기 ></a>
      </div>
      
      <div class="grid grid-cols-4 gap-4 mb-6">
        <% 
          featured_comics = @comics.first(3)
          featured_images = [
            "https://picsum.photos/300/200?random=101",
            "https://picsum.photos/300/200?random=102", 
            "https://picsum.photos/300/200?random=103"
          ]
        %>
        <% featured_comics.each_with_index do |comic, index| %>
          <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <div class="relative">
              <img src="<%= featured_images[index] %>" alt="<%= comic.title %>" class="w-full h-32 object-cover">
              <div class="absolute top-2 left-2">
                <span class="bg-green-500 text-white text-xs px-2 py-1 rounded">UP</span>
              </div>
            </div>
            <div class="p-3">
              <h3 class="font-bold text-sm text-gray-800 truncate"><%= comic.title %></h3>
              <p class="text-xs text-gray-600 mt-1"><%= comic.author %></p>
              <p class="text-xs text-gray-500 mt-1 line-clamp-2">흥미진진한 스토리로 가득한 신작 웹툰입니다.</p>
            </div>
          </div>
        <% end %>
        
        <!-- 광고 배너 -->
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg overflow-hidden text-white relative">
          <div class="p-4 h-full flex flex-col justify-center">
            <h3 class="font-bold text-lg mb-2">오늘 컵기 하이라이트</h3>
            <p class="text-sm opacity-90">모바일 게임 오늘 컵기 하이라이트</p>
            <p class="text-xs mt-2 opacity-75">e스포츠 월드컵 오늘 컵기 하이라이트</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 오늘의 업데이트 웹툰 섹션 -->
    <section>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-800">오늘의 업데이트 웹툰</h2>
        <div class="flex items-center space-x-2 text-sm text-gray-500">
          <span>업데이트</span>
          <span>순서순</span>
          <span>평점순</span>
        </div>
      </div>

      <!-- 요일 탭 -->
      <div class="flex space-x-1 mb-6 bg-white rounded-lg p-1 shadow-sm">
        <button onclick="showAllComics()" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors">전체</button>
        <button onclick="filterByDay('월')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '월' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">월요일</button>
        <button onclick="filterByDay('화')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '화' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">화요일</button>
        <button onclick="filterByDay('수')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '수' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">수요일</button>
        <button onclick="filterByDay('목')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '목' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">목요일</button>
        <button onclick="filterByDay('금')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '금' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">금요일</button>
        <button onclick="filterByDay('토')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '토' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">토요일</button>
        <button onclick="filterByDay('일')" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors <%= @current_day == '일' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100' %>">일요일</button>
        <button onclick="showNewComics()" class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors text-gray-600 hover:bg-gray-100">신작</button>
        <button class="tab-btn px-4 py-2 rounded-md text-sm font-medium transition-colors text-gray-600 hover:bg-gray-100">완결</button>
      </div>

      <!-- 웹툰 그리드 -->
      <div class="grid grid-cols-7 gap-4" id="webtoon-grid">
        <% @comics.each_with_index do |comic, index| %>
          <% 
            thumbnail_images = [
              "https://picsum.photos/150/200?random=1",
              "https://picsum.photos/150/200?random=2", 
              "https://picsum.photos/150/200?random=3",
              "https://picsum.photos/150/200?random=4",
              "https://picsum.photos/150/200?random=5",
              "https://picsum.photos/150/200?random=6",
              "https://picsum.photos/150/200?random=7",
              "https://picsum.photos/150/200?random=8",
              "https://picsum.photos/150/200?random=9",
              "https://picsum.photos/150/200?random=10"
            ]
            current_image = thumbnail_images[index % thumbnail_images.length]
          %>
          <div class="group cursor-pointer">
            <a href="/webtoon/list?titleId=<%= comic.id %>&tab=tue" class="block">
              <div class="relative mb-2">
                <img src="<%= current_image %>" 
                     alt="<%= comic.title %>" 
                     class="w-full h-40 object-cover rounded-lg group-hover:opacity-90 transition-opacity"
                     loading="lazy">
                <div class="absolute top-2 left-2">
                  <span class="bg-green-500 text-white text-xs px-1.5 py-0.5 rounded font-medium">UP</span>
                </div>
              </div>
              <div class="text-center">
                <h3 class="font-bold text-sm text-gray-800 truncate mb-1 group-hover:text-green-600 transition-colors"><%= comic.title %></h3>
                <p class="text-xs text-gray-500"><%= comic.author %></p>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </section>
  </div>

  <!-- 로딩 스피너 -->
  <div id="loading-spinner" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 flex items-center space-x-3">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-green-600"></div>
      <span class="text-gray-700">로딩 중...</span>
    </div>
  </div>
</main>

<script>
// 전역 변수
let allComics = [];
let currentFilter = '<%= @current_day %>';

// 페이지 로드 시 초기화
document.addEventListener('DOMContentLoaded', function() {
  // 현재 표시된 웹툰들을 allComics에 저장
  loadAllComics();
  
  // 현재 요일 탭 활성화
  setActiveTab(currentFilter);
});

// 모든 웹툰 데이터 로드
async function loadAllComics() {
  try {
    showLoading(true);
    
    // 모든 요일의 웹툰 데이터를 가져오기
    const days = ['월', '화', '수', '목', '금', '토', '일'];
    allComics = [];
    
    for (const day of days) {
      const response = await fetch(`/api/webtoons/by_day/${day}`);
      if (response.ok) {
        const data = await response.json();
        allComics = allComics.concat(data.map(comic => ({...comic, dayOfWeek: day})));
      }
    }
    
    showLoading(false);
  } catch (error) {
    console.error('웹툰 데이터 로드 실패:', error);
    showLoading(false);
  }
}

// 요일별 필터링
async function filterByDay(day) {
  try {
    showLoading(true);
    
    const response = await fetch(`/api/webtoons/by_day/${day}`);
    if (response.ok) {
      const comics = await response.json();
      displayComics(comics);
      setActiveTab(day);
      currentFilter = day;
    }
    
    showLoading(false);
  } catch (error) {
    console.error('웹툰 필터링 실패:', error);
    showLoading(false);
  }
}

// 전체 웹툰 표시
function showAllComics() {
  if (allComics.length > 0) {
    displayComics(allComics);
    setActiveTab('전체');
    currentFilter = '전체';
  } else {
    // 데이터가 없으면 다시 로드
    loadAllComics().then(() => {
      displayComics(allComics);
      setActiveTab('전체');
      currentFilter = '전체';
    });
  }
}

// 신작 웹툰 표시
function showNewComics() {
  const newComics = allComics.filter(comic => comic.isNew);
  displayComics(newComics);
  setActiveTab('신작');
  currentFilter = '신작';
}

// 웹툰 목록 표시
function displayComics(comics) {
  const container = document.getElementById('webtoon-grid');
  
  if (comics.length === 0) {
    container.innerHTML = `
      <div class="col-span-7 text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">📚</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">웹툰이 없습니다</h3>
        <p class="text-gray-600">다른 요일을 선택해보세요.</p>
      </div>
    `;
    return;
  }
  
  const thumbnailImages = [
    "https://picsum.photos/150/200?random=1",
    "https://picsum.photos/150/200?random=2", 
    "https://picsum.photos/150/200?random=3",
    "https://picsum.photos/150/200?random=4",
    "https://picsum.photos/150/200?random=5",
    "https://picsum.photos/150/200?random=6",
    "https://picsum.photos/150/200?random=7",
    "https://picsum.photos/150/200?random=8",
    "https://picsum.photos/150/200?random=9",
    "https://picsum.photos/150/200?random=10"
  ];
  
  container.innerHTML = comics.map((comic, index) => {
    const currentImage = thumbnailImages[index % thumbnailImages.length];
    return `
      <div class="group cursor-pointer">
        <a href="/webtoon/list?titleId=${comic.id}&tab=tue" class="block">
          <div class="relative mb-2">
            <img src="${comic.thumbnail || currentImage}" 
                 alt="${comic.title}" 
                 class="w-full h-40 object-cover rounded-lg group-hover:opacity-90 transition-opacity"
                 loading="lazy">
            <div class="absolute top-2 left-2">
              <span class="bg-green-500 text-white text-xs px-1.5 py-0.5 rounded font-medium">UP</span>
            </div>
            ${comic.isNew ? '<div class="absolute top-2 right-2"><span class="bg-red-500 text-white text-xs px-1.5 py-0.5 rounded font-medium">NEW</span></div>' : ''}
          </div>
          <div class="text-center">
            <h3 class="font-bold text-sm text-gray-800 truncate mb-1 group-hover:text-green-600 transition-colors">${comic.title}</h3>
            <p class="text-xs text-gray-500">${comic.author}</p>
            ${comic.dayOfWeek ? `<p class="text-xs text-gray-400 mt-1">${comic.dayOfWeek}요일</p>` : ''}
          </div>
        </a>
      </div>
    `;
  }).join('');
}

// 활성 탭 설정
function setActiveTab(activeTab) {
  // 모든 탭 비활성화
  document.querySelectorAll('.tab-btn').forEach(tab => {
    tab.classList.remove('bg-green-500', 'text-white');
    tab.classList.add('text-gray-600');
  });
  
  // 활성 탭 찾기 및 활성화
  const tabs = document.querySelectorAll('.tab-btn');
  tabs.forEach(tab => {
    const tabText = tab.textContent.trim();
    let matchText = activeTab;
    
    // 요일 매핑
    if (activeTab === '월') matchText = '월요일';
    else if (activeTab === '화') matchText = '화요일';
    else if (activeTab === '수') matchText = '수요일';
    else if (activeTab === '목') matchText = '목요일';
    else if (activeTab === '금') matchText = '금요일';
    else if (activeTab === '토') matchText = '토요일';
    else if (activeTab === '일') matchText = '일요일';
    
    if (tabText === matchText) {
      tab.classList.remove('text-gray-600');
      tab.classList.add('bg-green-500', 'text-white');
    }
  });
}

// 로딩 스피너 표시/숨김
function showLoading(show) {
  const spinner = document.getElementById('loading-spinner');
  if (show) {
    spinner.classList.remove('hidden');
  } else {
    spinner.classList.add('hidden');
  }
}

// 키보드 단축키 (선택사항)
document.addEventListener('keydown', function(e) {
  if (e.altKey) {
    switch(e.key) {
      case '1': filterByDay('월'); break;
      case '2': filterByDay('화'); break;
      case '3': filterByDay('수'); break;
      case '4': filterByDay('목'); break;
      case '5': filterByDay('금'); break;
      case '6': filterByDay('토'); break;
      case '7': filterByDay('일'); break;
      case '0': showAllComics(); break;
    }
  }
});
</script>