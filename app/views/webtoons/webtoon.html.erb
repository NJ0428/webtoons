// í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
document.addEventListener('DOMContentLoaded', function() {
  // í˜„ì¬ í‘œì‹œëœ ì›¹íˆ°ë“¤ì„ allComicsì— ì €ì¥
  loadAllComics();
  
  // í˜„ì¬ ìš”ì¼ íƒ­ í™œì„±í™”
  setActiveTab(currentFilter);
});

// ëª¨ë“  ì›¹íˆ° ë°ì´í„° ë¡œë“œ
async function loadAllComics() {
  try {
    showLoading(true);
    
    // ëª¨ë“  ìš”ì¼ì˜ ì›¹íˆ° ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ê¸°
    const days = ['ì›”', 'í™”', 'ìˆ˜', 'ëª©', 'ê¸ˆ', 'í† ', 'ì¼'];
    allComics = [];
    
    for (const day of days) {
      const response = await fetch(`/api/webtoons/by_day/${day}`);
      if (response.ok) {
        const data = await response.json();
        allComics = allComics.concat(data.map(comic => ({...comic, dayOfWeek: day})));
      }
    }
    
    showLoading(false);
  } catch (error) {
    console.error('ì›¹íˆ° ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
    showLoading(false);
  }
}

// ìš”ì¼ë³„ í•„í„°ë§
async function filterByDay(day) {
  try {
    showLoading(true);
    
    const response = await fetch(`/api/webtoons/by_day/${day}`);
    if (response.ok) {
      const comics = await response.json();
      displayComics(comics);
      setActiveTab(day);
      currentFilter = day;
    }
    
    showLoading(false);
  } catch (error) {
    console.error('ì›¹íˆ° í•„í„°ë§ ì‹¤íŒ¨:', error);
    showLoading(false);
  }
}

// ì „ì²´ ì›¹íˆ° í‘œì‹œ
function showAllComics() {
  if (allComics.length > 0) {
    displayComics(allComics);
    setActiveTab('ì „ì²´');
    currentFilter = 'ì „ì²´';
  } else {
    // ë°ì´í„°ê°€ ì—†ìœ¼ë©´ ë‹¤ì‹œ ë¡œë“œ
    loadAllComics().then(() => {
      displayComics(allComics);
      setActiveTab('ì „ì²´');
      currentFilter = 'ì „ì²´';
    });
  }
}

// ì‹ ì‘ ì›¹íˆ° í‘œì‹œ
function showNewComics() {
  const newComics = allComics.filter(comic => comic.isNew);
