}

// ì¥ë¥´ë³„ ì›¹íˆ° ë¡œë“œ í•¨ìˆ˜
async function loadGenreWebtoons(genre, sort) {
  const grid = document.getElementById('webtoon-grid');
  
  // ë¡œë”© í‘œì‹œ
  grid.innerHTML = '<div class="col-span-full text-center py-8 text-gray-500">ë¡œë”© ì¤‘...</div>';
  
  try {
    const response = await fetch(`/api/webtoons/by_genre/${genre}?sort=${sort}`);
    const comics = await response.json();
    
    setTimeout(() => {
      displayWebtoons(comics);
    }, 300);
  } catch (error) {
    console.error('ì›¹íˆ° ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
    grid.innerHTML = '<div class="col-span-full text-center py-8 text-red-500">ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ”ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.</div>';
  }
}

// ì›¹íˆ° ëª©ë¡ í‘œì‹œ í•¨ìˆ˜
function displayWebtoons(comics) {
  const grid = document.getElementById('webtoon-grid');
  
  if (comics.length === 0) {
    grid.innerHTML = '<div class="col-span-full text-center py-8 text-gray-500">í•´ë‹¹ ì¥ë¥´ì˜ ì›¹íˆ°ì´ ì—†ìŠµë‹ˆë‹¤.</div>';
    return;
  }
  
  grid.innerHTML = comics.map((comic, index) => `
