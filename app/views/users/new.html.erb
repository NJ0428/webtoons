<div class="min-h-screen bg-white flex">
  <!-- 왼쪽 이미지 섹션 -->
  <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-green-600 to-blue-700 relative overflow-hidden">
    <!-- 배경 이미지 -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-20" 
         style="background-image: url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80');">
    </div>
    
    <!-- 오버레이 콘텐츠 -->
    <div class="relative z-10 flex flex-col justify-center items-center text-white p-12">
      <div class="max-w-md text-center">
        <h1 class="text-4xl font-bold mb-6">새로운 시작</h1>
        <p class="text-xl mb-8 opacity-90">
          웹툰과 웹소설의 무한한 세계에<br>
          오신 것을 환영합니다.<br>
          지금 바로 시작해보세요!
        </p>
        <div class="flex justify-center space-x-4">
          <div class="w-3 h-3 bg-white rounded-full"></div>
          <div class="w-3 h-3 bg-white rounded-full opacity-60"></div>
          <div class="w-3 h-3 bg-white rounded-full opacity-60"></div>
        </div>
      </div>
    </div>
    
    <!-- 장식적 요소 -->
    <div class="absolute top-10 right-10 w-24 h-24 bg-white opacity-10 rounded-full"></div>
    <div class="absolute bottom-20 left-20 w-16 h-16 bg-white opacity-5 rounded-full"></div>
  </div>

  <!-- 오른쪽 회원가입 폼 섹션 -->
  <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-50">
    <div class="max-w-md w-full space-y-8">
      <!-- 헤더 -->
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900">
          회원가입
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
      
      <!-- 회원가입 폼 -->
      <div class="bg-white shadow-xl rounded-lg p-8">
        <%= form_with model: @user, url: signup_path, local: true, class: "space-y-6" do |form| %>
          
          <!-- 아이디 -->
          <div>
            <%= form.label :name, "아이디", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :name, 
                  placeholder: "아이디를 입력하세요", 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          
          <!-- 닉네임 -->
          <div>
            <%= form.label :nickname, "닉네임", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :nickname, 
                  placeholder: "닉네임을 입력하세요", 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>

          <!-- 이메일 -->
          <div>
            <%= form.label :email, "이메일", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.email_field :email, 
                  placeholder: "이메일 주소", 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          
          <!-- 비밀번호 -->
          <div>
            <%= form.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :password, 
                  placeholder: "비밀번호 (최소 6자)", 
                  required: true,
                  minlength: 6,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            <p class="mt-1 text-xs text-gray-500">비밀번호는 최소 6자 이상이어야 합니다.</p>
          </div>

          <!-- 비밀번호 확인 -->
          <div>
            <%= form.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.password_field :password_confirmation, 
                  placeholder: "비밀번호를 다시 입력하세요", 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>

          <!-- 회원가입 버튼 -->
          <div>
            <%= form.submit "회원가입", 
                  class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
          </div>

        <% end %>
        
        <!-- 에러 메시지 -->
        <% if @user && @user.errors.any? %>
          <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong>오류가 발생했습니다:</strong>
            <ul class="mt-2 list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- 추가 정보 -->
      <div class="text-center">
        <p class="text-xs text-gray-500">
          안전한 회원가입을 위해 HTTPS 연결을 사용합니다.
        </p>
      </div>
    </div>
  </div>
</div>