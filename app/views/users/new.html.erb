<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        회원가입
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        또는
        <%= link_to "로그인", login_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
    
    <%= form_with model: @user, url: signup_path, local: true, class: "mt-8 space-y-6" do |form| %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :name, "이름", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, 
                placeholder: "이름", 
                required: true,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% if @user.errors[:name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :email, "이메일", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, 
                placeholder: "이메일 주소", 
                required: true,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% if @user.errors[:email].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, 
                placeholder: "비밀번호 (최소 6자)", 
                required: true,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% if @user.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        
        <div>
          <%= form.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password_confirmation, 
                placeholder: "비밀번호 확인", 
                required: true,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.submit "회원가입", 
              class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>