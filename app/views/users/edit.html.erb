<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 헤더 -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">프로필 편집</h1>
          <p class="text-gray-600 mt-1">프로필 정보를 수정하면 새로운 버전으로 저장됩니다</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "변경 이력", profile_history_user_path(@user), 
              class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" %>
          <%= link_to "취소", user_path(@user), 
              class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors" %>
        </div>
      </div>
    </div>

    <!-- 현재 프로필 정보 -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <h3 class="text-sm font-medium text-blue-800 mb-2">현재 프로필 (버전 <%= @current_profile.version %>)</h3>
      <div class="flex items-center space-x-3">
        <img src="<%= @current_profile.avatar_url %>" alt="<%= @current_profile.name %>" 
             class="w-10 h-10 rounded-full object-cover">
        <div>
          <p class="text-sm font-medium text-blue-900"><%= @current_profile.name %> (<%= @current_profile.nickname %>)</p>
          <p class="text-xs text-blue-700">
            마지막 수정: <%= @current_profile.updated_at.strftime("%Y년 %m월 %d일 %H:%M") %>
          </p>
        </div>
      </div>
    </div>

    <!-- 프로필 편집 폼 -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, class: "space-y-6" do |form| %>
        <% if @current_profile.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">오류가 발생했습니다</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @current_profile.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- 기본 정보 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, "이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, value: @current_profile.name,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :nickname, "닉네임", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :nickname, value: @current_profile.nickname,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :phone, "전화번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.telephone_field :phone, value: @current_profile.phone,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "010-1234-5678" %>
          </div>

          <div>
            <%= form.label :birth_date, "생년월일", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :birth_date, value: @current_profile.birth_date,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :gender, "성별", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex space-x-4">
              <label class="flex items-center">
                <%= form.radio_button :gender, "male", checked: @current_profile.gender == "male",
                    class: "text-blue-600 focus:ring-blue-500" %>
                <span class="ml-2 text-sm text-gray-700">남성</span>
              </label>
              <label class="flex items-center">
                <%= form.radio_button :gender, "female", checked: @current_profile.gender == "female",
                    class: "text-blue-600 focus:ring-blue-500" %>
                <span class="ml-2 text-sm text-gray-700">여성</span>
              </label>
              <label class="flex items-center">
                <%= form.radio_button :gender, "other", checked: @current_profile.gender == "other",
                    class: "text-blue-600 focus:ring-blue-500" %>
                <span class="ml-2 text-sm text-gray-700">기타</span>
              </label>
            </div>
          </div>
        </div>

        <!-- 프로필 이미지 -->
        <div>
          <%= form.label :profile_image, "프로필 이미지 URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :profile_image, value: @current_profile.profile_image,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "https://example.com/image.jpg" %>
          <p class="mt-1 text-sm text-gray-500">프로필 이미지 URL을 입력하세요 (선택사항)</p>
        </div>

        <!-- 자기소개 -->
        <div>
          <%= form.label :bio, "자기소개", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :bio, value: @current_profile.bio,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              rows: 4, placeholder: "자신을 소개해주세요..." %>
        </div>

        <!-- 변경 사유 -->
        <div>
          <%= label_tag :change_reason, "변경 사유", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_area_tag :change_reason, "",
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              rows: 2, placeholder: "프로필을 변경하는 이유를 간단히 적어주세요 (선택사항)" %>
          <p class="mt-1 text-sm text-gray-500">변경 사유는 프로필 이력에 기록됩니다</p>
        </div>

        <!-- 버튼 -->
        <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
          <%= link_to "취소", user_path(@user), 
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "프로필 업데이트", 
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>