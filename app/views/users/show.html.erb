function saveTableSettings() {
  const table = document.getElementById('resizable-table');
  if (!table) return;
  
  const columns = table.querySelectorAll('.resizable');
  const settings = {};
  
  columns.forEach((column, index) => {
    settings[index] = {
      width: column.style.width
    };
  });
  
  localStorage.setItem('webtoonCreatorTableSettings', JSON.stringify(settings));
}

// í…Œì´ë¸” ì„¤ì • ë¶ˆëŸ¬ì˜¤ê¸°
function loadTableSettings() {
  const savedSettings = localStorage.getItem('webtoonCreatorTableSettings');
  if (!savedSettings) return;
  
  const table = document.getElementById('resizable-table');
  if (!table) return;
  
  const columns = table.querySelectorAll('.resizable');
  const settings = JSON.parse(savedSettings);
  
  columns.forEach((column, index) => {
    if (settings[index] && settings[index].width) {
      column.style.width = settings[index].width;
    }
  });
  
  table.style.tableLayout = 'fixed';
}
