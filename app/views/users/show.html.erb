<script>
// 섹션 전환 기능
function showSection(sectionName) {
  // 모든 섹션 숨기기
  document.querySelectorAll('.section-content').forEach(section => {
    section.classList.add('hidden');
  });
  
  // 모든 네비게이션 아이템 비활성화
  document.querySelectorAll('.nav-item').forEach(item => {
    item.classList.remove('text-green-600', 'bg-green-50');
    item.classList.add('text-gray-600');
  });
  
  // 선택된 섹션 보이기
  document.getElementById(sectionName + '-section').classList.remove('hidden');
  
  // 선택된 네비게이션 아이템 활성화
  event.target.closest('.nav-item').classList.remove('text-gray-600');
  event.target.closest('.nav-item').classList.add('text-green-600', 'bg-green-50');
  
  // 제목 변경
  const titles = {
    'dashboard': '대시보드',
    'works': '작품 관리',
    'analytics': '통계 분석',
    'profile': '프로필 설정',
    'help': '도움말'
  };
  document.getElementById('section-title').textContent = titles[sectionName];
}

// 모달 열기/닫기 기능
function openModal(modalId) {
  document.getElementById(modalId).classList.remove('hidden');
  document.getElementById(modalId).classList.add('flex');
}

function closeModal(modalId) {
  document.getElementById(modalId).classList.add('hidden');
  document.getElementById(modalId).classList.remove('flex');
}

// 모달 외부 클릭시 닫기
document.addEventListener('click', function(event) {
  if (event.target.classList.contains('bg-black')) {
    event.target.classList.add('hidden');
    event.target.classList.remove('flex');
  }
});

// 페이지 로드시 대시보드 섹션 활성화
document.addEventListener('DOMContentLoaded', function() {
  showSection('dashboard');
  initResizableTable();
});

// 테이블 열 너비 조절 기능
function initResizableTable() {
  const table = document.getElementById('resizable-table');
  if (!table) return;
  
  const resizableColumns = table.querySelectorAll('.resizable');
  let currentResizer = null;
  let startX, startWidth;
  
  // 각 열에 리사이저 추가
  resizableColumns.forEach(column => {
    // 최소 너비 설정
    const minWidth = parseInt(column.getAttribute('data-min-width') || 30);
    
    // 리사이저 요소 생성
    const resizer = document.createElement('div');
    resizer.classList.add('column-resizer');
    resizer.style.cssText = `
      position: absolute;
      top: 0;
      right: 0;
      width: 5px;
      height: 100%;
      background-color: transparent;
      cursor: col-resize;
      user-select: none;
      z-index: 1;
    `;
    
    // 열에 상대 위치 설정
    column.style.position = 'relative';
    
    // 리사이저 추가
    column.appendChild(resizer);
    
    // 마우스 이벤트 처리
    resizer.addEventListener('mousedown', function(e) {
      currentResizer = resizer;
      startX = e.pageX;
      startWidth = parseInt(window.getComputedStyle(column).width);
      
      // 드래그 중 스타일 추가
      resizer.classList.add('active');
      document.body.style.cursor = 'col-resize';
      
      // 마우스 이벤트 리스너 추가
      document.addEventListener('mousemove', mouseMoveHandler);
      document.addEventListener('mouseup', mouseUpHandler);
      
      // 텍스트 선택 방지
      e.preventDefault();
    });
    
    // 마우스 오버 효과
    resizer.addEventListener('mouseover', function() {
      resizer.style.backgroundColor = 'rgba(0, 120, 212, 0.4)';
    });
    
    resizer.addEventListener('mouseout', function() {
      if (currentResizer !== resizer) {
        resizer.style.backgroundColor = 'transparent';
      }
    });
    
    // 마우스 이동 핸들러
    function mouseMoveHandler(e) {
      if (!currentResizer) return;
      
      const diffX = e.pageX - startX;
      const newWidth = Math.max(startWidth + diffX, minWidth);
      
      column.style.width = newWidth + 'px';
      
      // 테이블 레이아웃 업데이트
      table.style.tableLayout = 'fixed';
    }
    
    // 마우스 업 핸들러
    function mouseUpHandler() {
      currentResizer.classList.remove('active');
      currentResizer.style.backgroundColor = 'transparent';
      document.body.style.cursor = '';
      
      document.removeEventListener('mousemove', mouseMoveHandler);
      document.removeEventListener('mouseup', mouseUpHandler);
      
      currentResizer = null;
    }
  });
  
  // 테이블에 스타일 추가
  table.style.tableLayout = 'fixed';
  
  // 리사이저 활성화 스타일
  const style = document.createElement('style');
  style.innerHTML = `
    .column-resizer.active {
      background-color: rgba(0, 120, 212, 0.6) !important;
    }
    .resizable-header th {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  `;
  document.head.appendChild(style);
}

// 테이블 설정 저장 (로컬 스토리지 활용)
function saveTableSettings() {
  const table = document.getElementById('resizable-table');
  if (!table) return;
  
  const columns = table.querySelectorAll('.resizable');
  const settings = {};
  
  columns.forEach((column, index) => {
    settings[index] = {
      width: column.style.width
    };
  });
  
  localStorage.setItem('webtoonCreatorTableSettings', JSON.stringify(settings));
}

// 테이블 설정 불러오기
function loadTableSettings() {
  const savedSettings = localStorage.getItem('webtoonCreatorTableSettings');
  if (!savedSettings) return;
  
  const table = document.getElementById('resizable-table');
  if (!table) return;
  
  const columns = table.querySelectorAll('.resizable');
  const settings = JSON.parse(savedSettings);
  
  columns.forEach((column, index) => {
    if (settings[index] && settings[index].width) {
      column.style.width = settings[index].width;
    }
  });
  
  table.style.tableLayout = 'fixed';
}
</script>