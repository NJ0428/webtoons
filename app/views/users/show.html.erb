<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <!-- 프로필 헤더 -->
      <div class="bg-gradient-to-r from-purple-500 to-indigo-600 px-6 py-8">
        <div class="flex items-center space-x-6">
          <div class="flex-shrink-0">
            <img class="h-24 w-24 rounded-full border-4 border-white shadow-lg" 
                 src="<%= @user.avatar_url %>" 
                 alt="<%= @user.name %>의 프로필 사진">
          </div>
          <div class="text-white">
            <h1 class="text-3xl font-bold"><%= @user.name %></h1>
            <p class="text-xl opacity-90">@<%= @user.nickname %></p>
            <% if @user.bio.present? %>
              <p class="mt-2 text-lg opacity-80"><%= @user.bio %></p>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- 프로필 정보 -->
      <div class="px-6 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- 기본 정보 -->
          <div>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">기본 정보</h2>
            <div class="space-y-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-500">실명</p>
                  <p class="text-lg text-gray-900"><%= @user.name %></p>
                </div>
              </div>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-500">이메일</p>
                  <p class="text-lg text-gray-900"><%= @user.email %></p>
                </div>
              </div>
              
              <% if @user.phone.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <div>
                    <p class="text-sm text-gray-500">전화번호</p>
                    <p class="text-lg text-gray-900"><%= @user.phone %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <!-- 추가 정보 -->
          <div>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">추가 정보</h2>
            <div class="space-y-4">
              <% if @user.birth_date.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <div>
                    <p class="text-sm text-gray-500">생년월일</p>
                    <p class="text-lg text-gray-900">
                      <%= @user.birth_date.strftime("%Y년 %m월 %d일") %>
                      <% if @user.age %>
                        <span class="text-sm text-gray-500">(<%= @user.age %>세)</span>
                      <% end %>
                    </p>
                  </div>
                </div>
              <% end %>
              
              <% if @user.gender.present? %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <div>
                    <p class="text-sm text-gray-500">성별</p>
                    <p class="text-lg text-gray-900">
                      <%= case @user.gender
                          when 'male' then '남성'
                          when 'female' then '여성'
                          when 'other' then '기타'
                          else @user.gender
                          end %>
                    </p>
                  </div>
                </div>
              <% end %>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-500">가입일</p>
                  <p class="text-lg text-gray-900"><%= @user.created_at.strftime("%Y년 %m월 %d일") %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 액션 버튼 -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <%= link_to "프로필 수정", "#", 
                class: "flex-1 inline-flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
          
          <%= link_to "홈으로", root_path, 
                class: "flex-1 inline-flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
          
          <%= link_to "로그아웃", logout_path, method: :delete, 
                class: "flex-1 inline-flex justify-center py-3 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out",
                data: { confirm: "정말 로그아웃하시겠습니까?" } %>
        </div>
      </div>
    </div>
  </div>
</div>