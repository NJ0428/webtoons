<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 헤더 -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">프로필 변경 이력</h1>
          <p class="text-gray-600 mt-1"><%= @user.email %>의 프로필 변경 기록</p>
        </div>
        <%= link_to "프로필로 돌아가기", user_path(@user), 
            class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
      </div>
    </div>

    <!-- 프로필 히스토리 -->
    <div class="space-y-6">
      <% @profiles.each_with_index do |profile, index| %>
        <div class="bg-white rounded-lg shadow-sm border <%= 'border-blue-500 bg-blue-50' if profile.is_current %>">
          <div class="p-6">
            <!-- 헤더 -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <img src="<%= profile.avatar_url %>" alt="<%= profile.name %>" 
                       class="w-12 h-12 rounded-full object-cover">
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                    버전 <%= profile.version %>
                    <% if profile.is_current %>
                      <span class="ml-2 bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                        현재
                      </span>
                    <% end %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <%= profile.created_at.strftime("%Y년 %m월 %d일 %H:%M") %>
                    · <%= profile.changed_by == 'user' ? '사용자' : '시스템' %>
                  </p>
                </div>
              </div>
              
              <% unless profile.is_current %>
                <%= form_with url: rollback_profile_user_path(@user), method: :post, local: true, class: "inline" do |form| %>
                  <%= form.hidden_field :version, value: profile.version %>
                  <%= form.submit "이 버전으로 복원", 
                      class: "bg-green-600 text-white px-3 py-1 text-sm rounded hover:bg-green-700 transition-colors",
                      confirm: "정말로 이 버전으로 복원하시겠습니까?" %>
                <% end %>
              <% end %>
            </div>

            <!-- 변경 사유 -->
            <% if profile.change_reason.present? %>
              <div class="mb-4 p-3 bg-gray-50 rounded-lg">
                <p class="text-sm text-gray-700">
                  <span class="font-medium">변경 사유:</span> <%= profile.change_reason %>
                </p>
              </div>
            <% end %>

            <!-- 프로필 정보 -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700">이름</label>
                <p class="text-gray-900"><%= profile.name %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">닉네임</label>
                <p class="text-gray-900"><%= profile.nickname %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">전화번호</label>
                <p class="text-gray-900"><%= profile.phone.presence || '미입력' %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">생년월일</label>
                <p class="text-gray-900">
                  <%= profile.birth_date&.strftime("%Y년 %m월 %d일") || '미입력' %>
                  <% if profile.age %>
                    <span class="text-gray-500">(<%= profile.age %>세)</span>
                  <% end %>
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">성별</label>
                <p class="text-gray-900">
                  <%= case profile.gender
                      when 'male' then '남성'
                      when 'female' then '여성'
                      when 'other' then '기타'
                      else '미입력'
                      end %>
                </p>
              </div>
            </div>

            <!-- 자기소개 -->
            <% if profile.bio.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">자기소개</label>
                <div class="bg-gray-50 rounded-lg p-3">
                  <p class="text-gray-900 whitespace-pre-wrap"><%= profile.bio %></p>
                </div>
              </div>
            <% end %>

            <!-- 변경사항 표시 -->
            <% unless index == @profiles.length - 1 %>
              <% changes = profile.changes_from_previous %>
              <% if changes.any? %>
                <div class="mt-4 pt-4 border-t border-gray-200">
                  <h4 class="text-sm font-medium text-gray-700 mb-2">이전 버전과의 변경사항</h4>
                  <div class="space-y-2">
                    <% changes.each do |field, change| %>
                      <div class="text-sm">
                        <span class="font-medium text-gray-700">
                          <%= case field
                              when 'name' then '이름'
                              when 'nickname' then '닉네임'
                              when 'phone' then '전화번호'
                              when 'birth_date' then '생년월일'
                              when 'gender' then '성별'
                              when 'profile_image' then '프로필 이미지'
                              when 'bio' then '자기소개'
                              else field
                              end %>:
                        </span>
                        <span class="text-red-600 line-through"><%= change[:from] || '미입력' %></span>
                        →
                        <span class="text-green-600"><%= change[:to] || '미입력' %></span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @profiles.empty? %>
      <div class="bg-white rounded-lg shadow-sm p-8 text-center">
        <div class="text-gray-400 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">프로필 이력이 없습니다</h3>
        <p class="text-gray-600">아직 프로필 변경 이력이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>